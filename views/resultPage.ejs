<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Result</title>
    <!-- nav bar -->
    <!-- ref: https://www.w3schools.com/bootstrap/tryit.asp?filename=trybs_navbar_inverse&stacked=h -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />

    <!-- like button -->
    <!-- ref: https://bootsnipp.com/snippets/8yNX -->
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <link rel="stylesheet" href="css/likes_button.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">

                <div class="navbar-header">
                    <a class="navbar-brand" href="#" id=>
                        <img src=" https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/logo_white.png " width="30 " height="30 " alt="logo ">
                    </a>
                    <a class="navbar-brand" href="#">Pixels4K</a>

                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/upload">Home</a></li>

                </ul>
                <div class="navbar-right nav navbar-nav" style="display: inline; padding: 10px;">
                    <form class="d-flex form-inline" action='/search' method="POST" enctype="multipart/form-data">
                        <input class="form-control mr-2 " style="display: inline;" type="search" id="search_query" name="search_query" placeholder="Search wallpapers... " aria-label="Search" style="margin-right:8px;">
                        <button class="btn btn-success " style="display: inline;" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <!-- Button trigger modal -->

    <hr>
    <style>
        * {
            box-sizing: border-box;
        }
        
        .co {
            float: center;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            border: 2px solid #bdafaf;
        }
        /* Clearfix (clear floats) */
        
        .column::hover {
            border: 2px solid #070404;
        }
        
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
    <div class="row" style="padding: 4px;">
        <% items.forEach(function(image) { %>

            <div class="col-xs-4">
                <img width="20%" height="20%" src="data:image/<%=image.img.contentType%>;base64,
					<%=image.img.data.toString('base64')%>" />
                <div>
                    <h3 style="background-color: darkorange;">
                        <%= image.name %>
                    </h3>
                    <hr>

                    <p>
                        Description:
                        <textarea readonly class="form-control" id="form4Example3" id="desc" name="desc" value="hfght" rows="2" rows="4 "><%= image.desc %></textarea>
                    </p>
                    <p>
                        Tag:
                        <button class="btn btn-success " style="display: inline;" type="submit"> <%= image.tag %></button>

                    </p>
                    <p style="display:inline;">
                        <!-- like button -->
                        <i class="bi bi-share"></i>
                        <article class="col-xs-12 col-sm-6 col-md-3">
                            <div class="panel panel-default " style="display:inline;">
                                Likes:

                                <span class="pull-right panel-footer" style="float: right;display: inline;">
                                          <i id="<%= image._id %>" style="display: inline;"class="glyphicon glyphicon-thumbs-up"></i>
                                          <span  id="<%= image._id %>-count"style="display: inline;"> <%= image.likes %> </span>
                                </span>

                            </div>
                        </article>
                    </p>
                </div>
            </div>
            <% }) %>
    </div>
    <footer>
        <%-include('partials/footer')%>
    </footer>
    <!-- nav bar -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- like button -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="/js/likes_button.js"></script>
</body>

</html>